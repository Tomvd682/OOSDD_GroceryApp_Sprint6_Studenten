<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Grocery.App.Views.NewProductView"
             Title="Nieuw product">

    <VerticalStackLayout Padding="16" Spacing="12">
        <Label Text="Naam" />
        <Entry Text="{Binding Name}" Placeholder="Productnaam" />

        <Label Text="Voorraad" />
        <Entry Text="{Binding Stock}" Keyboard="Numeric" />

        <Label Text="Houdbaar tot" />
        <DatePicker Date="{Binding ShelfLife}" />

        <Label Text="Prijs" />
        <Entry Text="{Binding Price}" Keyboard="Numeric" />

        <Grid ColumnDefinitions="*,*" ColumnSpacing="12" Margin="0,12,0,0">
            <Button Text="Annuleren" Command="{Binding CancelCommand}" />
            <Button Grid.Column="1" Text="Opslaan" Command="{Binding SaveCommand}" IsEnabled="{Binding CanSave}" />
        </Grid>
    </VerticalStackLayout>
</ContentPage>
